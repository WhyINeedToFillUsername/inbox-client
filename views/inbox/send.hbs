<div class="container-fluid mt-3">
    <h1>{{title}}</h1>

    <form class="mt-4" id="messageForm">
        <div class="form-group">
            <label for="iriTo">To:</label>
            <input type="url" class="form-control" id="iriTo" aria-describedby="emailHelp" required
                   placeholder="Resource IRI, e.g. 'https://tonda.solid.community/profile/card#me'">
        </div>
        <div class="form-group">
            <label for="notifContent">Raw notification content</label>
            <textarea class="form-control" id="notifContent" rows="3" placeholder="JSON-LD, RDF..." required></textarea>
        </div>
        <button type="submit" class="btn btn-primary" id="sendNotif">Send</button>
    </form>
</div>

